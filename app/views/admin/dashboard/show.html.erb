<section class="cart-show">

  <header class="page-header">
    <h1>Admin Dashboard</h1>
  </header>

  <div class="list-group">
    <%= link_to admin_products_path, class: "list-group-item list-group-item-info" do %> 
      <strong>Number of products available in database</strong>
      <span class="badge"><%= @products_count %></span>
    <% end %>
    <br>
    <%= link_to admin_categories_path, class: "list-group-item list-group-item-info" do %> 
      <strong>Number of unique categories in database</strong>
      <span class="badge"><%= @category_count %></span>
    <% end %>
  </div>


</section>